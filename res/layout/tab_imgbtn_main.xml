<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout 
    	android:id="@+id/contentViewLayout"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_marginBottom="57dip"/>
<LinearLayout android:layout_width="fill_parent"
	android:layout_height="50dip"
	android:orientation="horizontal"
	android:layout_alignParentBottom="true">
	<ImageButton android:id="@+id/btn1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background="@null"
		android:src="@drawable/i01"/>
	<ImageButton android:id="@+id/btn2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background="@null"
		android:src="@drawable/i02"/>
	<ImageButton android:id="@+id/btn3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background="@null"
		android:src="@drawable/i03"/>
	<ImageButton android:id="@+id/btn4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:background="@null"
		android:src="@drawable/i04"/>
</LinearLayout>
</RelativeLayout>
